{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "indent": ["error", 2],
    "keyword-spacing": "error",
    "linebreak-style": "error",
    "quotes": ["error", "single"],
    "semi": "error",
    "space-before-blocks": "error",
    "space-before-function-paren": "error",
    "no-undef": "off",
    "no-unused-vars": "off",
    "react/prop-types": 0
  },
  "overrides": [
    {
      "files": ["*.config.cjs"],
      "env": {
        "node": true
      }
    }
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
