generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  name     String
  lastName String
  token    String
  Recipe   Recipe[]
}

model Recipe {
  id           String   @id @default(uuid())
  title        String
  description  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  owner        User     @relation(fields: [authorId], references: [id])
  authorId     String   @default("bcfe5af2-637d-4a95-a80f-1cacaf79bd46")
  original     Boolean  @default(true)
  image        String?
  prepTime     String
  cookTime     String
  totalTime    String
  servings     String
  instructions Json[]
  ingredients  String[]
  url          String?
}
